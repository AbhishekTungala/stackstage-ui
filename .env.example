# StackStage Backend Environment Configuration

# Environment
NODE_ENV=development
PORT=5000

# Database Configuration
DATABASE_URL=postgres://user:password@host:port/database

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# OpenRouter AI Service Configuration (Required for AI features)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=perplexity/llama-3-sonar-large-32k-online
OPENROUTER_MAX_TOKENS=4000
OPENROUTER_TEMPERATURE=0.7

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=stackstage-storage

# Google Cloud Configuration (Optional)
GCP_PROJECT_ID=your_gcp_project_id
GCP_KEY_FILE=path/to/your/service-account-key.json
GCP_STORAGE_BUCKET=stackstage-storage

# Azure Configuration (Optional)
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string
AZURE_CONTAINER_NAME=stackstage-storage
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret

# Default Cloud Provider
DEFAULT_CLOUD_PROVIDER=aws

# Redis Configuration (Optional - fallback cache used if not available)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AI_WINDOW_MS=60000
RATE_LIMIT_AI_MAX_REQUESTS=10

# CORS Configuration
FRONTEND_URL=http://localhost:5000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# API Keys for External Integrations
VALID_API_KEYS=api-key-1,api-key-2,api-key-3

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
SESSION_SECRET=your_session_secret_key
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# Feature Flags
ENABLE_REAL_TIME=true
ENABLE_WEBSOCKETS=true
ENABLE_CACHE=true
ENABLE_MONITORING=true
ENABLE_GEO_LOCATION=true

# External Services (Optional)
GEOLOCATION_API_KEY=your_geolocation_api_key
MAXMIND_LICENSE_KEY=your_maxmind_license_key

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# Webhook Configuration (Optional)
WEBHOOK_SECRET=your_webhook_secret

# Slack Configuration (Optional)
SLACK_WEBHOOK_URL=your_slack_webhook_url